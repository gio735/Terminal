<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Terminal</title>
	<link rel="icon"
		  href="~/images/TerLogo.png"
		  type="image/x-icon" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Terminal.MVC.styles.css" asp-append-version="true" />
	<style>
		.search-container {
			width: 50%;
			margin-left:25%;
			display: flex;
			justify-content: center;
		}

		.search-input {
			width: 100%;
			padding: 8px;
			border: 1px solid #ccc;
			border-radius: 25px;
			font-size: 16px;
			background-color: white;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
		}
	</style>
</head>
<body style="background-color: #36393e">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/TerLogo.png" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item" style="background-color:#1b9cf2; margin-right:20px;">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item" style="background-color:#1b9cf2; margin-right:20px;">
							@if (User.Identity?.IsAuthenticated == true)
							{
								<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="SuggestDefinition">Suggest Definition</a>
							}
							else
							{
								<a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="SignIn">Suggest Definition</a>

							}
						</li>
						<li class="nav-item" style="background-color:#1b9cf2; margin-right:20px;">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>
					<ul class="navbar-nav navbar-right active-btn-effect">
						@if (User.Identity?.IsAuthenticated == true)
						{
							<li class="nav-item" style="background-color:#1b9cf2">
								<a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="SignOut">Sign Out</a>
							</li>
						}
						else
						{
							<li class="nav-item" style="background-color:#1b9cf2; margin-right:20px;">
								<a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
							</li>
							<li class="nav-item" style="background-color:#1b9cf2">
								<a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="SignIn">Sign In</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="search-container">
		<input type="text" class="search-input" placeholder="Search...">
	</div>
	<br />
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="footer text-muted" style="background-color: white;">
		<div class="container">
			&copy; 2024 - Terminal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
