@model Terminal.Application.Definitions.Requests.DefinitionCreationRequest

@{
	ViewData["Title"] = "SuggestDefinition";
}
<style>
	body {
		background-color: #f8f9fa;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.container {
		margin-top: 25px;
	}

	.card {
		border: none;
		border-radius: 10px;
		box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
		padding: 40px;
		background: linear-gradient(to bottom, #ffffff, #f2f4f6);
	}

	.card-title {
		font-weight: 700;
		font-size: 24px;
		margin-bottom: 30px;
		text-align: center;
		color: #333;
	}

	.form-group label {
		font-weight: 600;
		color: #555;
	}

	.form-control {
		border-radius: 5px;
	}

	.btn-primary {
		background-color: #007bff;
		border: none;
		border-radius: 5px;
		font-weight: 600;
		transition: background-color 0.3s;
	}

		.btn-primary:hover {
			background-color: #0056b3;
		}
</style>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<h2 class="card-title">Suggest Definition</h2>
				<hr>
				<form asp-action="SuggestDefinition">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="GeorgianTitle" class="control-label"></label>
						<input asp-for="GeorgianTitle" class="form-control" />
						<span asp-validation-for="GeorgianTitle" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="EnglishTitle" class="control-label"></label>
						<input asp-for="EnglishTitle" class="form-control" />
						<span asp-validation-for="EnglishTitle" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="GeorgianContent" class="control-label"></label>
						<input asp-for="GeorgianContent" class="form-control" />
						<span asp-validation-for="GeorgianContent" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="EnglishContent" class="control-label"></label>
						<input asp-for="EnglishContent" class="form-control" />
						<span asp-validation-for="EnglishContent" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
